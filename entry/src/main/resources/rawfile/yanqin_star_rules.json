  "year_star_rules": {
    "description": "年禽计算：以甲子年为基准，每年顺数一宿",
    "base_year": 1984,
    "base_star": "虚",
    "base_star_full": "虚日鼠",
    "note": "1984年甲子年，年禽为虚日鼠。1985年为危月燕，依此类推。"
  },

  "month_star_rules": {
    "description": "月禽计算：根据年禽的七政属性确定正月起始星宿，然后顺数12个月",
    "element_to_start_star": {
      "日": "角",
      "月": "室",
      "火": "室",
      "金": "心",
      "土": "胃",
      "水": "牛",
      "木": "参"
    },
    "note": "太阳用角木参头，太阴起室火星取，金心土胃水骑牛"
  },

  "day_star_rules": {
    "description": "日禽计算：基于七元甲子体系，420天一大循环",
    "cycle_days": 420,
    "yuan_days": 60,
    "jiang_days": 15,
    
    "seven_yuan_heads": {
      "description": "七元甲子起头：虚奎毕鬼翼氐箕",
      "list": ["虚", "奎", "毕", "鬼", "翼", "氐", "箕"]
    },

    "four_generals": {
      "description": "七元四将头：每元60天分4将，每将15天",
      "一元": ["虚", "张", "室", "轸"],
      "二元": ["奎", "亢", "胃", "房"],
      "三元": ["毕", "尾", "参", "斗"],
      "四元": ["鬼", "女", "星", "危"],
      "五元": ["翼", "壁", "角", "娄"],
      "六元": ["氐", "昴", "心", "觜"],
      "七元": ["箕", "井", "牛", "柳"]
    },

    "base_date": {
      "date": "1984-02-02",
      "yuan": 1,
      "jiang": 1,
      "star": "虚",
      "note": "1984年2月2日为一元甲子日，起虚日鼠"
    },

    "calculation_note": "从基准日期计算天数差，对420取模得到在大循环中的位置，再确定元和将，最后确定日禽"
  },

  "hour_star_rules": {
    "description": "时禽计算：根据日禽的七政属性确定子时起始星宿，然后顺数12个时辰",
